<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wzz.mapper.BlogMapper">
    <select id="findAll" resultType="Blog" parameterType="String">
        SELECT * FROM blog_list
        <where>
            <if test="category != null">
                category=#{category}
            </if>
        </where>
        ORDER BY create_time DESC;
    </select>
    <select id="getBlogById" resultType="Blog">
        SELECT * FROM blog_list WHERE id=#{id};
    </select>
    <insert id="createBlog" parameterType="Blog">
        insert into blog_list(id,title,content,create_time,user_name)values (#{id},#{title},#{content},#{create_time},#{user_name})
    </insert>

    <delete id="deleteBlogById" parameterType="Long">
        delete from blog_list where
        id=#{id}
    </delete>
    <update id="updateBlogById" parameterType="Blog">
        update blog_list
        <set>
            <if test="content != null">content=#{content},</if>
            <if test="title != null">title=#{title},</if>
        </set>
        where id=#{id}
    </update>

</mapper>